{
  "name": "feathers-docs-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Read-only MCP server for FeathersJS documentation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test:e2e": "npm run build && vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts"
  },
  "dependencies": {
    "fastmcp": "^3.33.0",
    "gray-matter": "^4.0.3",
    "isomorphic-git": "^1.30.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.13.10",
    "tsx": "^4.20.5",
    "typescript": "~5.9.3",
    "vitest": "^2.1.8"
  }
}